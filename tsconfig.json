{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2017",
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": false,
        "outDir": "build"
    },
    "exclude": [
        "build/**/*",
        "publish/**/*",
        "node_modules/**/*"
    ],
    "include": [
        "src/**/*.ts"
    ]
}